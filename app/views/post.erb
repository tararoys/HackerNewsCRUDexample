<div class="container">
  <div class="post">
    <a href="post/<%=@post.id%>"><%= @post.title %></a> <a href="<%= @post.source%>"><%= @post.source%></a><br> <a href="/users/<%=@post.author.id%>"> <%= @post.author.name %> </a> <%= @post.comments.count %>
  </div>

  <div class="comments">
    <a href="/comment/new?post_id=<%=@post.id%>"> <b> new comment</b></a>
    <ul>
      <% @comments.each do |comment| %>
        <li> <%= comment.content %> 
          
          <% if @user && comment.user_id == @user.id %>
            <a href="/comment/<%= comment.id %>/edit"> edit </a>
          <% end %>
          
          <a href="/users/<%=comment.user.id%>"><%= comment.user.name %></a> 
          <span> <%= comment.created_at.to_s(:db) %></span>
          
          <% if @user && comment.user_id == @user.id %>
            <a href="/comment/<%= comment.id %>/delete"> delete </a>
          <% end %>
        
        </li>
      <% end %>
    </ul>
  </div>
</div>